<div id="<%= dom_id category %>" class="card">
  <div class="flex">
    <h2> <%= category.name %> </h2>
    <p style="color: red; font-weight:700;"><%="$#{category.payments.sum(:amount)}"%></p>
  </div>
  <p>
    <strong>Icon:</strong>
    <%= category.icon %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= category.created_at.strftime('%a, %e %b %Y') %>
  </p>
</div>
