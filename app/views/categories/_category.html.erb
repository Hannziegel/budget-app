<div id="<%= dom_id category %>" class="card">
  <div class="flex">
    <h2>
      <strong>Name:</strong>
      <%= category.name %>
    </h2>
    <p><%="$#{category.payments.sum(:amount)}"%></p>
  </div>
  <p>
    <strong>Icon:</strong>
    <%= category.icon %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= category.created_at %>
  </p>

</div>
